<%= form_for [:admin, @category] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <% if @category.parent_id.present? %>
    <div class="form-group">
      <%= f.label :parent_id %>
      <%= f.select :parent_id, options_for_select(Category.filter_by_parent_id.collect{|cate| [cate.name, cate.id]}), {}, {class: "form-control"}%>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group back">
    <%= link_to "Back", admin_categories_path, class: "btn-danger btn-back"%>
    <%= f.submit t("admin.products.form.submit"), class: "btn btn-info" %>
  </div>
<% end %>