<% @users.each_with_index do |user, index| %>
  <tr>
    <td><%= new_index_page(params[:page]) + index %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= image_tag user.display_image if user.image.attached? %></td>
    <td>
      <%= link_to edit_admin_user_path(user) do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to admin_user_path(user), method: :delete, data: {confirm: t(".delete")} do %>
       <i class="far fa-trash-alt"></i>
      <% end %>
    </td>
  </tr>
<% end %>
