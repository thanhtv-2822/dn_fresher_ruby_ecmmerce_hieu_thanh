<table class="table table-bordered table-hover table-inverse">
  <thead class="thead-inverse|thead-default">
    <tr>
      <th><%= t ".id" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".email" %></th>
      <th><%= t ".img" %></th>
      <th class="col-md-2"><%= t ".action" %></th>
    </tr>
  </thead>
  <div class="row justify-content-between mb-4">
    <div class="col-md-3">
      <%= form_with url: admin_users_path, method: :get do |form| %>
        <%= form.label :name, t("placeholder") %>
        <%= form.text_field :name %>
        <%= form.submit t("admin.search"), class: "btn btn-primary"%>
      <% end %>
    </div>
    <div class="col-md-1">
      <%= button_to  t("show_all"), admin_users_path, method: "get", class: "btn btn-outline-primary config-showall" %>
    </div>
  </div>
  <tbody>
    <%= render "user" %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) %>
