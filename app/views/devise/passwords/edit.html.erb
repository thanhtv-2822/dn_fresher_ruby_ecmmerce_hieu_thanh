<div id="signup">
  <div class="container">
    <div id="signup-row" class="row justify-content-center align-items-center">
      <div id="signup-column" class="col-md-6">
        <div id="signup-box" class="col-md-12">
          <h3 class="text-center text-info"><%= t "devises.change_password" %></h3>
          
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.hidden_field :reset_password_token %>
          
            <div class="field">
              <%= f.label :password, t("devises.new_password") %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> <%= t "devises.characters_minimum" %>)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
              <small><i><%= render partial: 'devise/shared/error_message_for_field', locals: {object: resource, attr: :password} %></i></small>
            </div>
          
            <div class="field">
              <%= f.label :password_confirmation, t("devises.new_password_confirmation") %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              <small><i><%= render partial: 'devise/shared/error_message_for_field', locals: {object: resource, attr: :password_confirmation} %></i></small>
            </div>
          
            <div class="actions">
              <%= f.submit t("devises.change_password"), class: "btn btn-info" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
       </div>
      </div>
    </div>
  </div>
</div>


